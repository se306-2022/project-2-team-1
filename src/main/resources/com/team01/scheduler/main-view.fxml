<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ListView?>
<?import com.team01.scheduler.gui.Console?>
<?import javafx.scene.control.ToolBar?>
<SplitPane orientation="VERTICAL" xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.team01.scheduler.MainController"
           fx:id="splitPane">
    <VBox>
        <ToolBar>
            <Button text="Run Task" onAction="#onRunTask"/>
            <Button text="Toggle Console" onAction="#onToggleConsole"/>
        </ToolBar>
        <ListView fx:id="listView" VBox.vgrow="ALWAYS" />
    </VBox>
    <Console fx:id="console" />
</SplitPane>
